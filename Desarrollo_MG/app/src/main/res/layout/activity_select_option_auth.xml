<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.SelectOptionAuthActivity">

    <include layout="@layout/action_bar_toollbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/carro2"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona una opciÃ³n"
            android:textAlignment="center"
            android:textColor="@color/cardview_dark_background"
            android:layout_margin="40dp"
            android:textSize="32dp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/btnGoToLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:background="@drawable/rounded_button"
            android:layout_marginRight="32dp"
            android:textStyle="normal"
            android:textColor="@color/colorWhite"
            android:text="YA TENGO CUENTA"
            android:backgroundTint="@color/colorBlue"/>
        <Button
            android:id="@+id/btnGoToRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:background="@drawable/rounded_button"
            android:layout_marginLeft="32dp"
            android:textStyle="normal"
            android:layout_marginTop="20dp"
            android:text="REGISTRARME AHORA"
            android:backgroundTint="@color/colorAccent"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>